<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net5.0-windows</TargetFramework>
    <Platforms>x64;x86</Platforms>
    <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
    <AppendRuntimeIdentifierToOutputPath>false</AppendRuntimeIdentifierToOutputPath>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|x64'">
    <DefineConstants>DEBUG;TRACE</DefineConstants>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|x86'">
    <DefineConstants>DEBUG;TRACE</DefineConstants>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Gettext.Tools" Version="0.21.0.1" />
    <PackageReference Include="GitInfo" Version="2.2.0">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\..\MagicKeys\MagicKeys.csproj" />
  </ItemGroup>

  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command="set mkbuilddir=$(SolutionDir)MagicKeys\bin\$(PlatformName)\$(ConfigurationName)&#xD;&#xA;set distdir=$(SolutionDir)Dist\$(PlatformName)&#xD;&#xA;xcopy /e /i /q /y &quot;$(ProjectDir)Images&quot; &quot;%25mkbuilddir%25\Plugins\$(TargetName)\Images&quot; &gt; nul&#xD;&#xA;xcopy /e /i /q /y &quot;$(ProjectDir)VUI&quot; &quot;%25mkbuilddir%25\Plugins\$(TargetName)\VUI&quot; &gt; nul&#xD;&#xA;copy /y &quot;$(ProjectDir)Manifest.ini&quot; &quot;%25mkbuilddir%25\Plugins\$(TargetName)\&quot; &gt; nul&#xD;&#xA;copy /y &quot;$(TargetPath)&quot; &quot;%25mkbuilddir%25\Plugins\$(TargetName)\&quot; &gt; nul&#xD;&#xA;xcopy /e /i /q /y &quot;$(ProjectDir)Images&quot; &quot;%25distdir%25\Plugins\$(TargetName)\Images&quot; &gt; nul&#xD;&#xA;xcopy /e /i /q /y &quot;$(ProjectDir)VUI&quot; &quot;%25distdir%25\Plugins\$(TargetName)\VUI&quot; &gt; nul&#xD;&#xA;copy /y &quot;$(ProjectDir)Manifest.ini&quot; &quot;%25distdir%25\Plugins\$(TargetName)\&quot; &gt; nul&#xD;&#xA;copy /y &quot;$(TargetPath)&quot; &quot;%25distdir%25\Plugins\$(TargetName)\&quot; &gt; nul" />
  </Target>

</Project>
